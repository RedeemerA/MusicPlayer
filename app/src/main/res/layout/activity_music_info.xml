<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MusicInfoActivity" >
    <TextView
        android:id="@+id/download_main_back"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/download_main_progressBarlist"
        android:text="BACK"
        android:textSize="30sp"/>
    <TextView
        android:id="@+id/download_main_Music_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:layout_below="@+id/download_main_back"
        android:layout_alignLeft="@+id/download_main_progressBarlist"
        android:text="musicName" />
    <TextView
        android:id="@+id/download_main_Author_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@+id/download_main_Music_name"
        android:layout_alignLeft="@+id/download_main_progressBarlist"
        android:text="musicName" />

    <TextView
        android:id="@+id/download_main_Text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/download_main_Author_name"
        android:layout_alignLeft="@+id/download_main_progressBarlist"
        android:layout_marginTop="20dp"
        android:text="当前进度" />
    <ProgressBar
        android:id="@+id/download_main_progressBarlist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/download_main_Text"
        style="?android:attr/progressBarStyleHorizontal"
        />
    <Button
        android:id="@+id/download_main_Button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/download_main_Text"
        android:layout_below="@+id/download_main_Text"
        android:layout_marginTop="39dp"
        android:text="下载" />
    "
</RelativeLayout>